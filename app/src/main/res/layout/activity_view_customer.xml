<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewCustomer"
    android:background="@color/background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/opt1"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/item"
            android:elevation="10dp"

            android:layout_marginTop="310dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            >

            <ImageView
                android:id="@+id/ans1"
                android:layout_marginStart="12dp"
                android:layout_width="30dp"

                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mobile"
                android:text="Grass" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/mobile1"
                android:text="0774081614"
                android:fontFamily="@font/robotobold"
                android:layout_marginStart="60dp"
                android:layout_marginTop="12dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="10dp"
            android:id="@+id/opt3"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/item"
            android:layout_marginStart="50dp"
            android:layout_marginTop="430dp"
            android:layout_marginEnd="50dp"

            >

            <ImageView
                android:id="@+id/ans2"
                android:layout_marginStart="12dp"
                android:layout_width="30dp"


                android:layout_height="wrap_content"
                app:srcCompat="@drawable/telephone"
                android:text="Grass" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotobold"
                android:id="@+id/landline"
                android:text="0774081614"
                android:layout_marginStart="60dp"
                android:textSize="20dp"
                android:layout_marginTop="12dp"/>
        </androidx.cardview.widget.CardView>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/opt4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="490dp"
                android:layout_marginEnd="50dp"
                app:cardBackgroundColor="@color/item"
                app:cardCornerRadius="15dp"
                android:elevation="10dp"
                >

                <ImageView
                    android:id="@+id/ans3"
                    android:layout_marginStart="12dp"
                    android:layout_width="30dp"

                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/email"
                    android:text="Grass" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:text="0774081614"
                    android:fontFamily="@font/robotobold"
                    android:layout_marginStart="60dp"
                    android:textSize="20dp"

                    android:layout_marginTop="12dp"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="260dp"
                app:cardCornerRadius="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@color/item"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="18dp"

                        android:textSize="25dp"
                        android:fontFamily="@font/breeserifregular"
                        android:text="Name" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="90dp"
                        android:layout_marginStart="18dp"

                        app:srcCompat="@drawable/location"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="91dp"
                        android:layout_marginStart="50dp"
                        android:id="@+id/address"
                        android:fontFamily="@font/robotobold"
                        android:textSize="20dp"
                        android:paddingLeft="10dp"
                        android:text="address"

                        ></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="193dp"
                        android:layout_marginStart="50dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/dob"
                        android:text="05/12/1977"
                        android:textSize="20dp"
                        android:fontFamily="@font/robotobold"

                        ></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="190dp"
                        android:layout_marginStart="18dp"
                        app:srcCompat="@drawable/cake"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="193dp"
                        android:layout_marginStart="240dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/ani"
                        android:textSize="20dp"
                        android:fontFamily="@font/robotobold"
                        android:text="05/12/1977"

                        ></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="190dp"
                        android:layout_marginStart="205dp"
                        app:srcCompat="@drawable/calendar"
                        ></ImageView>




                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/secondary">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="8dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/opt2"
            app:cardBackgroundColor="@color/item"
            android:layout_marginTop="370dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            >


            <ImageView
                android:id="@+id/ans4"
                android:layout_marginStart="12dp"
                android:layout_width="30dp"

                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mobile"
                android:text="Grass" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0774081614"
                android:fontFamily="@font/robotobold"
                android:id="@+id/mobile2"
                android:textSize="20dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="12dp"/>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>